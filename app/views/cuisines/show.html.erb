<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cuisine #<%= @cuisine.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @cuisine.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to cuisines_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_cuisine_url(@cuisine.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to cuisine_url(@cuisine.id), :method => "delete", :data => { :confirm => "Do you really want to delete this cuisine?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
        <% @cuisine.dishes.each do |dish| %>
        <li class="list-group-item">
          <%= link_to dish.name, dish %>
        </li>
        <% end %>
        <li class="list-group-item">
          <% @dish = Dish.new %>
          <%= form_tag dishes_url, :method => "post", :class => "form-horizontal" do %>
            <!-- Label and input for name -->
            <div class="form-group">
              <label for="name" class="col-sm-2 control-label">
                Name
              </label>
              <div class="col-sm-10">
                <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @dish.name %>">
              </div>
            </div>

            <!-- Label and input for cuisine_id -->
            <input type="hidden" id="cuisine_id" name="cuisine_id" placeholder="Cuisine" class="form-control" value="<%= @cuisine.id %>">

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Create Dish" class="btn btn-success">
                or
                <a href="/dishes">Cancel</a>
              </div>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
